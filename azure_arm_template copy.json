{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "location1": {
        "type": "string",
        "defaultValue": "westus",
        "metadata": {
          "description": "Primary region for resources."
        }
      },
      "location2": {
        "type": "string",
        "defaultValue": "southindia",
        "metadata": {
          "description": "Secondary region for resources."
        }
      }
    },
    "resources": [
      {
        "type": "Microsoft.Network/virtualNetworks",
        "apiVersion": "2021-05-01",
        "name": "VNET-1",
        "location": "[parameters('location1')]",
        "properties": {
          "addressSpace": {
            "addressPrefixes": ["10.0.0.0/16"]
          },
          "subnets": [
            { "name": "PublicSubnet1", "properties": { "addressPrefix": "10.0.1.0/24" } },
            { "name": "PublicSubnet2", "properties": { "addressPrefix": "10.0.2.0/24" } },
            { "name": "PrivateSubnet1", "properties": { "addressPrefix": "10.0.3.0/24" } },
            { "name": "PrivateSubnet2", "properties": { "addressPrefix": "10.0.4.0/24" } }
          ]
        }
      },
      {
        "type": "Microsoft.Network/virtualNetworks",
        "apiVersion": "2021-05-01",
        "name": "VNET-2",
        "location": "[parameters('location2')]",
        "properties": {
          "addressSpace": {
            "addressPrefixes": ["10.1.0.0/16"]
          },
          "subnets": [
            { "name": "PublicSubnet1", "properties": { "addressPrefix": "10.1.1.0/24" } },
            { "name": "PublicSubnet2", "properties": { "addressPrefix": "10.1.2.0/24" } },
            { "name": "PublicSubnet3", "properties": { "addressPrefix": "10.1.3.0/24" } },
            { "name": "PrivateSubnet1", "properties": { "addressPrefix": "10.1.4.0/24" } },
            { "name": "PrivateSubnet2", "properties": { "addressPrefix": "10.1.5.0/24" } },
            { "name": "PrivateSubnet3", "properties": { "addressPrefix": "10.1.6.0/24" } }
          ]
        }
      },
      {
        "type": "Microsoft.Network/virtualNetworks/virtualNetworkPeerings",
        "apiVersion": "2021-05-01",
        "name": "VNET-1/VNET1-to-VNET2",
        "properties": {
          "remoteVirtualNetwork": {
            "id": "[resourceId('Microsoft.Network/virtualNetworks', 'VNET-2')]"
          },
          "allowVirtualNetworkAccess": true,
          "allowForwardedTraffic": true,
          "allowGatewayTransit": true
        },
        "dependsOn": ["VNET-1"]
      },
      {
        "type": "Microsoft.Network/virtualNetworks/virtualNetworkPeerings",
        "apiVersion": "2021-05-01",
        "name": "VNET-2/VNET2-to-VNET1",
        "properties": {
          "remoteVirtualNetwork": {
            "id": "[resourceId('Microsoft.Network/virtualNetworks', 'VNET-1')]"
          },
          "allowVirtualNetworkAccess": true,
          "allowForwardedTraffic": true,
          "allowGatewayTransit": true
        },
        "dependsOn": ["VNET-2"]
      },
      {
        "type": "Microsoft.Network/natGateways",
        "apiVersion": "2021-05-01",
        "name": "NAT-Gateway-VNET1",
        "location": "[parameters('location1')]",
        "sku": {
          "name": "Standard"
        },
        "properties": {
          "subnets": [
            { "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', 'VNET-1', 'PrivateSubnet1')]" },
            { "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', 'VNET-1', 'PrivateSubnet2')]" }
          ]
        }
      },
      {
        "type": "Microsoft.Network/natGateways",
        "apiVersion": "2021-05-01",
        "name": "NAT-Gateway-VNET2",
        "location": "[parameters('location2')]",
        "sku": {
          "name": "Standard"
        },
        "properties": {
          "subnets": [
            { "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', 'VNET-2', 'PrivateSubnet1')]" },
            { "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', 'VNET-2', 'PrivateSubnet2')]" },
            { "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', 'VNET-2', 'PrivateSubnet3')]" }
          ]
        }
      },
      {
        "type": "Microsoft.Network/publicIPAddresses",
        "apiVersion": "2021-05-01",
        "name": "PublicIP-VNET1",
        "location": "[parameters('location1')]",
        "sku": {
          "name": "Standard"
        },
        "properties": {
          "publicIPAllocationMethod": "Static"
        }
      },
      {
        "type": "Microsoft.Network/publicIPAddresses",
        "apiVersion": "2021-05-01",
        "name": "PublicIP-VNET2",
        "location": "[parameters('location2')]",
        "sku": {
          "name": "Standard"
        },
        "properties": {
          "publicIPAllocationMethod": "Static"
        }
      },
      {
        "type": "Microsoft.Network/loadBalancers",
        "apiVersion": "2021-05-01",
        "name": "LoadBalancer-VNET1",
        "location": "[parameters('location1')]",
        "properties": {
          "frontendIPConfigurations": [
            {
              "name": "LoadBalancerFrontend",
              "properties": {
                "publicIPAddress": {
                  "id": "[resourceId('Microsoft.Network/publicIPAddresses', 'PublicIP-VNET1')]"
                }
              }
            }
          ],
          "backendAddressPools": [
            {
              "name": "LoadBalancerBackend"
            }
          ],
          "loadBalancingRules": [
            {
              "name": "LoadBalancingRule",
              "properties": {
                "frontendIPConfiguration": {
                  "id": "[resourceId('Microsoft.Network/loadBalancers/frontendIPConfigurations', 'LoadBalancer-VNET1', 'LoadBalancerFrontend')]"
                },
                "backendAddressPool": {
                  "id": "[resourceId('Microsoft.Network/loadBalancers/backendAddressPools', 'LoadBalancer-VNET1', 'LoadBalancerBackend')]"
                },
                "protocol": "Tcp",
                "frontendPort": 80,
                "backendPort": 80,
                "enableFloatingIP": false,
                "idleTimeoutInMinutes": 4,
                "loadDistribution": "Default",
                "probe": {
                  "id": "[resourceId('Microsoft.Network/loadBalancers/probes', 'LoadBalancer-VNET1', 'HealthProbe')]"
                }
              }
            }
          ],
          "probes": [
            {
              "name": "HealthProbe",
              "properties": {
                "protocol": "Http",
                "port": 80,
                "requestPath": "/",
                "intervalInSeconds": 5,
                "numberOfProbes": 2
              }
            }
          ]
        }
      },
      {
        "type": "Microsoft.Network/loadBalancers",
        "apiVersion": "2021-05-01",
        "name": "LoadBalancer-VNET2",
        "location": "[parameters('location2')]",
        "properties": {
          "frontendIPConfigurations": [
            {
              "name": "LoadBalancerFrontend",
              "properties": {
                "publicIPAddress": {
                  "id": "[resourceId('Microsoft.Network/publicIPAddresses', 'PublicIP-VNET2')]"
                }
              }
            }
          ],
          "backendAddressPools": [
            {
              "name": "LoadBalancerBackend"
            }
          ],
          "loadBalancingRules": [
            {
              "name": "LoadBalancingRule",
              "properties": {
                "frontendIPConfiguration": {
                  "id": "[resourceId('Microsoft.Network/loadBalancers/frontendIPConfigurations', 'LoadBalancer-VNET2', 'LoadBalancerFrontend')]"
                },
                "backendAddressPool": {
                  "id": "[resourceId('Microsoft.Network/loadBalancers/backendAddressPools', 'LoadBalancer-VNET2', 'LoadBalancerBackend')]"
                },
                "protocol": "Tcp",
                "frontendPort": 80,
                "backendPort": 80,
                "enableFloatingIP": false,
                "idleTimeoutInMinutes": 4,
                "loadDistribution": "Default",
                "probe": {
                  "id": "[resourceId('Microsoft.Network/loadBalancers/probes', 'LoadBalancer-VNET2', 'HealthProbe')]"
                }
              }
            }
          ],
          "probes": [
            {
              "name": "HealthProbe",
              "properties": {
                "protocol": "Http",
                "port": 80,
                "requestPath": "/",
                "intervalInSeconds": 5,
                "numberOfProbes": 2
              }
            }
          ]
        }
      }
    ]
}
